<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>OTR_One_Time_Revenue__c</field>
        <field>Revenue_Start_Date__c</field>
        <field>Product__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Compliance_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Compliance_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Compliance_User_Id</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>cedric.beeg@finleap.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR 2 OR 3</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Compliance_Approved_Date__c</field>
                <operation>equals</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Compliance_Approved_User__c</field>
                <operation>equals</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Compliance_Approved_User_Id__c</field>
                <operation>equals</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Compliance</label>
        <name>Compliance</name>
        <rejectionActions>
            <action>
                <name>Compliance_Rejected</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Empty_Compliance_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Empty_Compliance_User</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Empty_Compliance_User_Id</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Finance_Approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Finance_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Finance_User_Id</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>cedric.beeg@finleap.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR  2 OR  3</booleanFilter>
            <criteriaItems>
                <field>Opportunity.Finance_Approved_Date__c</field>
                <operation>equals</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Finance_Approved_User__c</field>
                <operation>equals</operation>
            </criteriaItems>
            <criteriaItems>
                <field>Opportunity.Finance_Approved_User_Id__c</field>
                <operation>equals</operation>
            </criteriaItems>
        </entryCriteria>
        <label>Finance</label>
        <name>Finance</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Empty_Finance_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Empty_Finance_User</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Empty_Finance_User_Id</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Finance_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Approval Process for Finleap Connect Opportunity</description>
    <emailTemplate>Finleap_Connect_Contract_Approval/Finleap_Connect_Contract_Approval_Submit</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Finleap Connect Standard Sales</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Confirmed</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.MRR_Monthly_Recurring_Revenue__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.OTR_One_Time_Revenue__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Contract</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Stage</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Empty_Compliance_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Empty_Compliance_User</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Empty_Compliance_User_Id</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Empty_Finance_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Empty_Finance_User</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Empty_Finance_User_Id</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Stage_To_Confirmed</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Finleap Connect Approval</label>
    <recallActions>
        <action>
            <name>Empty_Compliance_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Empty_Compliance_User</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Empty_Compliance_User_Id</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Empty_Finance_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Empty_Finance_User</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Empty_Finance_User_Id</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
