<aura:component implements="lightning:isUrlAddressable">
    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
     
    <aura:attribute name="header" type="String" default=""/>
    <aura:attribute name="open" type="Boolean" default="false"/>
    <aura:attribute name="isLarge" type="Boolean" default="false"/>
    <aura:attribute name="isMobile" type="Boolean" default="false"/>
    <aura:attribute name="recordId" type="Boolean" default="false"/>
    <aura:attribute name="showFooter" type="Boolean" default="true"/>
    <aura:if isTrue="{!!v.isMobile}">
        <section role="dialog" tabindex="-1" aria-label="Popup Up Modal" aria-modal="true" aria-describedby="modal-content-id-1"
                 class="{! join(' ', 
                        ' slds-modal slds-fade-in-open ',
                        v.isLarge ? ' slds-modal_large ' : ''
                        )}">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <button onclick="{!c.closeModel}" class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close">
                        <lightning:icon iconName="utility:sprite" alternativeText="Close!" title="Close" />
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    <h2 id="modal-heading-01" class="slds-modal__title slds-hyphenate">
                        {!v.header}
                    </h2>
                    
                </header>
                <aura:if isTrue="{!v.showFooter}">
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                        {!v.body}
                    </div>
                    <footer class="slds-modal__footer">
                        <lightning:button label="Cancel" title="Cancel" onclick="{! c.closeModel }"/>
                    </footer>
                    <aura:set attribute="else">
                        {!v.body}
                    </aura:set>
                </aura:if>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
    <aura:if isTrue="{!v.isMobile}">
        <div class="">
            <header class="slds-modal__header">
                <button onclick="{!c.closeModel}" class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close">
                    <lightning:icon iconName="utility:sprite" alternativeText="Close!" title="Close" />
                    <span class="slds-assistive-text">Close</span>
                </button>
                <h2 id="modal-heading-01" class="slds-modal__title slds-hyphenate">
                    {!v.header}
                </h2>
                
            </header>
            <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                {!v.body}
            </div>
            <aura:if isTrue="{!v.showFooter}">
                <footer class="slds-modal__footer ">
                    <lightning:button label="Cancel" title="Cancel" onclick="{! c.closeModel }"/>
                </footer>
            </aura:if>
        </div>
    </aura:if>
</aura:component>